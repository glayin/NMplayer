.container{
  display: flex;
  flex-direction: column;
}
.head-image{
  width: 100%;
  height: 460rpx;
}
.author-date{
  display:flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.avatar{
  height: 64rpx;
  width: 64rpx;
}

.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  color:#666;
}

.const-text{
  font-size: 24rpx;
  color:#999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
}
.title{
  margin-left:40rpx;
  margin-top: 30rpx;
  font-weight: 700;
  font-size: 36rpx;
  letter-spacing: 2px;
  color:#4b556c;
}

.horizon{
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: absolute;
  z-index: -9999;

}

.circle{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 660rpx;
}
.circle image{
  width: 90rpx;
  height: 90rpx;
  
}

.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top:185rpx;
  opacity:50% ;
}
.tool{
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
}
.share-img{
  margin-left: 30rpx;
}

.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  
}